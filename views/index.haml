!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
%meta{'http-equiv' => 'Content-Type', 'content' => "text/html;charset=UTF-8"}
  %head
    %title Montreal.rb
    %link(href="stylesheets/application.css" media="all" rel="stylesheet" type="text/css")

    %script{:type => "text/javascript"}
      (function() {
      var proto = window.location.protocol;
      document.writeln('<scr' + 'ipt type="text/ja' + 'vascr' + 'ipt" s' + 'rc="' +
      proto + '//a.staging.adgear.com/adgear.js/current/adgear.js' +
      '"></scr' + 'ipt>');
      })();
    %script{:type => "text/javascript"}
      ADGEAR.tags.script.init();
      ADGEAR.lang.namespace("ADGEAR.site_callbacks");
      ADGEAR.site_callbacks.variables = function() { return { }; }

  %body
    %img#logo(src="logo.png")
    #header
      %h1 Montreal.rb
      %p Montreal's Ruby Community

    %span.adgear
      %script{:type => "text/javascript"}
        ADGEAR.tags.script.embed({ "id": "248", "chip_key": "51e48a401bd5012d1d000024e87a30c2" });

    #page
      %ul#members
        - MEMBERS.sort.each do |name, info|
          = haml :member, :locals => {:member => info.merge('name' => name)}

    #footer
      This site is brought to you by the
      %a(href="http://montrealonrails.com") Montreal.rb
      dudes.
